{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "web app to handle messaging",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=testing && nyc mocha --require @babel/register --timeout 10000 --recursive",
    "start": "cross-env NODE_ENV=production && nodemon --exec babel-node src/index.js",
    "dev": "cross-env NODE_ENV=development && nodemon --exec babel-node src/index.js",
    "build": "babel src --out-dir build",
    "serve": "node build/index.js",
    "test-mocha": "cross-env NODE_ENV=testing && mocha --require @babel/register --timeout 10000 --recursive",
    "coverage": "cross-env NODE_ENV=testing && npm test && npm run generate-lcov",
    "generate-lcov": "cross-env NODE_ENV=testing && nyc report --reporter=text-lcov > lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caleb-42/EPIC-mail.git"
  },
  "author": "ewere chukwuma ebie",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/caleb-42/EPIC-mail/issues"
  },
  "homepage": "https://github.com/caleb-42/EPIC-mail#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.4",
    "bcrypt": "^3.0.4",
    "config": "^3.0.1",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "lodash": "^4.17.11",
    "winston": "^3.2.1"
  }
}
